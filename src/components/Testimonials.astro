---
const testimonials = [
  {
    quote:
      "Ich habe Pascal als Highlight für den Kindergeburtstag gemietet – professionell, liebevoll und absolut faszinierend.",
    name: "Sarah L.",
    title: "Mutter und Eventplanerin",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704d",
  },
  {
    quote:
      "Für kreative Projekte unschlagbar. Die Farben, die Ruhe – einfach einzigartig. Ein Chamäleon ist die Diva, die du nicht buchen kannst… außer hier.",
    name: "John D.",
    title: "Professioneller Fotograf",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704e",
  },
  {
    quote:
      "Ich wollte etwas Besonderes und Pflegeleichtes für mein Homeoffice. Mission erfüllt.",
    name: "Emily R.",
    title: "Chamäleon-Fan",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704f",
  },
];
---

<section id="testimonials" class="py-20 bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold">Was unsere Kunden sagen</h2>
      <p class="text-lg text-gray-400 mt-2">
        Echte Meinungen. Von echten Menschen.
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {
        testimonials.map((testimonial) => (
          <div class="bg-gray-900 p-8 rounded-lg shadow-lg">
            <p class="text-gray-300 italic mb-6">"{testimonial.quote}"</p>
            <div class="flex items-center">
              <img
                class="w-12 h-12 rounded-full mr-4"
                src={testimonial.avatar}
                alt={testimonial.name}
              />
              <div>
                <p class="font-bold">{testimonial.name}</p>
                <p class="text-sm text-gray-400">{testimonial.title}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
