---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Warenkorb | Miet-Echse.de">
  <header
    class="bg-gray-900/80 backdrop-blur-sm fixed top-0 left-0 right-0 z-50"
  >
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center h-20">
        <a href="/chameleons" class="text-2xl font-bold">
          <span class="text-green-400">Miet</span>-Echse.de
        </a>
        <a
          href="/chameleons"
          class="bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-2 rounded-lg shadow-md transition-all"
          >&larr; Zurück</a
        >
      </div>
    </div>
  </header>
  <section class="py-20 bg-gray-900 min-h-screen">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-extrabold text-center mb-12 text-green-400">
        Warenkorb
      </h1>
      <div
        id="cart-list"
        class="grid md:grid-cols-2 lg:grid-cols-3 gap-10 mb-12"
      >
      </div>
      <div id="empty-cart" class="text-center text-gray-400 text-lg hidden">
        Dein Warenkorb ist leer.
      </div>
      <div
        id="cart-form-section"
        class="max-w-xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg mt-8 hidden"
      >
        <h2 class="text-2xl font-bold mb-4 text-green-300">Anfrage absenden</h2>
        <form id="cart-form" class="space-y-4">
          <input
            type="text"
            name="name"
            required
            placeholder="Dein Name"
            class="w-full px-4 py-2 rounded bg-gray-900 text-white"
          />
          <input
            type="email"
            name="email"
            required
            placeholder="Deine E-Mail"
            class="w-full px-4 py-2 rounded bg-gray-900 text-white"
          />
          <input
            type="date"
            name="startdate"
            required
            class="w-full px-4 py-2 rounded bg-gray-900 text-white"
            min="{{new Date().toISOString().split('T')[0]}}"
          />
          <textarea
            name="message"
            rows="3"
            placeholder="Nachricht (optional)"
            class="w-full px-4 py-2 rounded bg-gray-900 text-white"></textarea>
          <button
            type="submit"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-lg shadow transition-all"
            >Anfrage senden</button
          >
        </form>
        <div id="cart-success" class="text-green-400 text-center mt-4 hidden">
          Anfrage gesendet! Wir melden uns bald bei dir.
        </div>
      </div>
    </div>
    <script type="module">
      function renderCart() {
        const cart = JSON.parse(localStorage.getItem("cart") || "[]");
        const cartList = document.getElementById("cart-list");
        const emptyCart = document.getElementById("empty-cart");
        const formSection = document.getElementById("cart-form-section");
        cartList.innerHTML = "";
        if (cart.length === 0) {
          emptyCart.classList.remove("hidden");
          formSection.classList.add("hidden");
          return;
        }
        emptyCart.classList.add("hidden");
        formSection.classList.remove("hidden");
        cart.forEach((c, idx) => {
          const div = document.createElement("div");
          div.className =
            "bg-gray-800 rounded-lg shadow-lg p-6 flex flex-col items-center relative";
          div.innerHTML = `
            <button class='absolute top-2 right-2 text-gray-400 hover:text-red-400 remove-from-cart' data-idx='${idx}' title='Entfernen'>&times;</button>
            <img src='${c.img}' alt='${c.name} das ${c.species}' class='w-32 h-32 object-cover rounded-full mb-4 border-4 border-green-400' />
            <h2 class='text-2xl font-bold mb-1'>${c.name}</h2>
            <p class='text-green-300 mb-2'>${c.species}</p>
          `;
          cartList.appendChild(div);
        });
        document.querySelectorAll(".remove-from-cart").forEach((btn) => {
          btn.addEventListener("click", () => {
            const idx = parseInt(btn.dataset.idx);
            cart.splice(idx, 1);
            localStorage.setItem("cart", JSON.stringify(cart));
            renderCart();
          });
        });
      }
      renderCart();
      // Set min date for date input
      document.querySelector('input[type="date"]').min = new Date()
        .toISOString()
        .split("T")[0];
      // Form submission
      document
        .getElementById("cart-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();
          const cart = JSON.parse(localStorage.getItem("cart") || "[]");
          const name = this.name.value;
          const email = this.email.value;
          const startdate = this.startdate.value;
          const message = this.message.value;
          const chams = cart.map((c) => `${c.name} (${c.species})`).join(", ");
          // Simulate sending (could use mailto or backend)
          this.reset();
          document.getElementById("cart-success").textContent =
            `Anfrage gesendet! Wir melden uns bald bei dir. Gewünschter Mietbeginn: ${startdate}`;
          document.getElementById("cart-success").classList.remove("hidden");
          setTimeout(() => {
            document.getElementById("cart-success").classList.add("hidden");
            localStorage.setItem("cart", "[]");
            renderCart();
          }, 3000);
        });
    </script>
  </section>
</Layout>
